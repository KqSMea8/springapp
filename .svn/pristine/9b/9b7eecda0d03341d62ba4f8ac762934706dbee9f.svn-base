#accordion {
	
}
#accordion .item {
	width: 500px;
	height: 30px; /* height = total height of A child element */ 
	overflow: hidden;
  
	transition: height ease-in-out 0.5s; /* css3 transition */
	-moz-transition: height ease-in-out 0.5s;
	-webkit-transition: height ease-in-out 0.5s;
	margin-bottom: 1px;
}
#accordion a {
	display: block;
	// height: 100px;
	// line-height: 80px;
	background: #e6e6e6;
	padding: 15px;
	color: #1e1e1e;
	text-decoration: none;
}
#accordion p {
	height: 180px;
	padding: 10px;
}

 #accordion div:hover{
 	height: 120px; /* height = total height of A and P elements */
 }
