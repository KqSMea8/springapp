<ion-header>
  <ion-navbar color="primary">
    <ion-title *ngIf="!isOn" center>List of Employees</ion-title>
      <ion-searchbar *ngIf="isOn" (ionInput)="getemp()" (ionCancel)="reset()"  [(ngModel)]="username" ></ion-searchbar>
    <ion-buttons end>
      <button class="searchbutton" (click)="toggleDetails()"><ion-icon name="search" class="search"></ion-icon></button>
    </ion-buttons>
  </ion-navbar>
</ion-header>

<ion-content>
  <ion-grid>
    <div *ngFor="let emp of employeeTable; let i=index" (click)="open(i)">
    <ion-row class="employeeContainer">
      <div class="colm imageContainer">
        <ion-icon name="person"></ion-icon>
       
        <span [style.background-color]="setBackground(emp.ie_emp_status)" class="dot">
        </span>
      </div>
      <div class="row1">
        <div class="name colm">
          {{emp.ie_emp_name}} (ID: {{emp.ie_emp_id}})
        </div>
      </div>

      <div class="row2">
        {{emp.ie_emp_email}}
          <!--<ion-icon name="arrow-dropright" class="right-arrow" ></ion-icon>-->
        </div>
      
    </ion-row>
    </div>
  </ion-grid>
</ion-content>



